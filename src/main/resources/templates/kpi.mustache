{{>layout/header}}

<style>
    .accordion {
      background-color: #ffb468;;
      color: #444;
      cursor: pointer;
      padding: 18px;
      width: 100%;
      border: none;
      text-align: left;
      outline: none;
      font-size: 15px;
      transition: 0.4s;
    }

    .accordion:active {
      border: none;
    }

    .panel {
      padding: 0 18px;
      display: none;
      background-color: #ffb468;;
      overflow: hidden;
    }
    </style>
    

<div class="container">
        <h1>KPI</h1>
        <hr>

        <div class="accordion"><p class="period">{{period.fromDate}} ~ {{period.toDate}}<img src="/img/plus.png" id="createKpi" class="icon-img" alt="plus"></p></div>
        
        <div class="panel">
            <div class="period-set">
                <span id="period-set">
                    <form>
                        <p><input type="text" name="fromDate" id="from_datepicker" placeholder="From"></p>
                        <p><input type="text" name="toDate" id="to_datepicker" placeholder="To"></p>
                        <button class="btn btn-kpi" id="btn-period-save">Save</button>
                        <button type="reset" class="btn btn-kpi-sub">Cancel</button>
                    </form>
                </span>
            </div>
        </div>
        

        <div class="section">
            <div class="article">
                <h2>Revenue</h2><a href="/kpi/save"><img src="/img/plus.png" id="createTask" class="icon-img" alt="plus"></a>
                <table class="table">
                    <thead>
                        <tr>
                            <th class="th-wide" scope="col">Task</th>
                            <th scope="col">Impact</th>
                            <th scope="col">Complexity</th>
                            <th scope="col">isDone</th>
                            <th scope="col">Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#tasks}}
                        <tr>
                            <td>{{taskName}}</td>
                            <td>{{impactStatus}}</td>
                            <td>{{complexityStatus}}</td>
                            <td>{{isFinished}}</td>
                            <td>
                                <a href="/kpi/update/{{id}}"><img src="/img/right-arrow.png" class="icon-img-sub" alt="edit"></a>
                                <a href="/kpi/delete/{{id}}" id="btn-delete"><img src="/img/minus.png" class="icon-img-sub" alt="minus"></a>
                            </td>
                        </tr>
                        {{/tasks}}
                    </tbody>
                </table>
            </div>
            <div class="article">
                <h2>Active Users</h2><a href=""><img src="/img/plus.png" class="icon-img" alt="plus"></a>
            </div>

            <div class="article">
                <h2>Talking to Users</h2><a href=""><img src="/img/plus.png" class="icon-img" alt="plus"></a>
            </div>

            <div class="article">
                <h2>Building Product</h2><a href=""><img src="/img/plus.png" class="icon-img" alt="plus"></a>
            </div>

        </div>

    </div>

{{>layout/footer}}