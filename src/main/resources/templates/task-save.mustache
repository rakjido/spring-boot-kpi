{{>layout/header}}

    <div class="container">
        <h1>KPI</h1>
        <hr>
        <div class="period">
            <p>2021.01.04 ~ 2021.01.10</p><a href=""><img src="/img/plus.png" class="icon-img" alt="plus"></a>
        </div>

        <div class="section">
            <div class="div-form row">
                <form>
                    <div class="form-group">
                        <label for="taskName">Task Name</label>
                        <input type="text" class="form-control" name="taskName" id="taskName" placeholder="What's your important task?">
                    </div>
                    <div class="form-group">
                        <label for="taskType">Task Type</label><br>
                        <select class="form-control" name="taskType" id="taskType">
                            <option name="taskType" value="Revenue" selected>Revenue</option>
                            <option name="taskType" value="ActiveUsers">Active Users</option>
                            <option name="taskType" value="UserFeedback">User Feedback</option>
                            <option name="taskType" value="Production">Build Product</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="impactStatus">Impact</label><br>
                        <select class="form-control" name="impactStatus" id="impactStatus">
                            <option name="impactStatus" value="High">High</option>
                            <option name="impactStatus" value="Medium">Medium</option>
                            <option name="impactStatus" value="Low">Low</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="complexityStatus">Complexity</label><br>
                        <select class="form-control" name="complexityStatus" id="complexityStatus">
                            <option name="complexityStatus" value="High">High</option>
                            <option name="complexityStatus" value="Medium">Medium</option>
                            <option name="complexityStatus" value="Low">Low</option>
                        </select>
                    </div>

                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" name="isFinished" id="isFinished">
                        <label class="form-check-label" for="isFinished">is Finished</label>
                    </div>
                    <input type="hidden" name="kpi" value="1L">
                    <hr>
                    <button type="button" class="btn btn-kpi" id="btn-save">Submit</button>
                </form>
            </div>
        </div>
        
    </div>

{{>layout/footer}}
